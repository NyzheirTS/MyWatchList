<BorderPane fx:id="mainBorderPane" prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.MyWatchList.AppEntry.MainController">
   <center>
        <StackPane BorderPane.alignment="CENTER">
            <children>
