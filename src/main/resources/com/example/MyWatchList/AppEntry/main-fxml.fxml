<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane fx:id="motherContainer" prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.MyWatchList.AppEntry.MainController">
   <center>
      <BorderPane BorderPane.alignment="CENTER">
         <center>
              <StackPane>
                  <children>
                  <BorderPane fx:id="infoPageBorderPane" prefHeight="1080.0" prefWidth="1674.0" />
                  </children>
              </StackPane>
         </center>
         <top>
            <HBox fillHeight="false" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="historyBack" mnemonicParsing="false" style="-fx-background-color: transparent;">
                     <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/Back.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <HBox.margin>
                        <Insets bottom="-50.0" left="3.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <BorderPane.margin>
                  <Insets top="4.0" />
               </BorderPane.margin>
            </HBox>
         </top>
      </BorderPane>
   </center>
   <top>
      <HBox fx:id="menuPnl" alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <children>
                <Button fx:id="btnOverview" alignment="BASELINE_LEFT" contentDisplay="GRAPHIC_ONLY" graphicTextGap="22.0" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleClicks" text="Home">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/Home%20Page.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </Button>
                <Button fx:id="btnOrders" alignment="BASELINE_LEFT" contentDisplay="GRAPHIC_ONLY" graphicTextGap="22.0" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleClicks" prefHeight="38.0" text="Watched Shows">
                    <graphic>
                        <ImageView fitHeight="26.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/Gallery.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnCustomers" alignment="BASELINE_LEFT" contentDisplay="GRAPHIC_ONLY" graphicTextGap="22.0" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleClicks" prefHeight="38.0" text="Want To Watch">
                    <graphic>
                        <ImageView fitHeight="26.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/Add%20Image.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnMenus" alignment="BASELINE_LEFT" contentDisplay="GRAPHIC_ONLY" graphicTextGap="22.0" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleClicks" prefHeight="38.0" text="Recommendations">
                    <graphic>
                        <ImageView fitHeight="26.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/Infinity.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnSettings" alignment="BASELINE_LEFT" contentDisplay="GRAPHIC_ONLY" graphicTextGap="22.0" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleClicks" prefHeight="38.0" text="Settings">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/Four%20Squares.png" />
                            </image>
                        </ImageView>
                    </graphic>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
                </Button>
                <Button fx:id="btnSignout" alignment="BASELINE_LEFT" contentDisplay="GRAPHIC_ONLY" graphicTextGap="22.0" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="38.0" text="Sign Out">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/Logout.png" />
                            </image>
                        </ImageView>
                    </graphic>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
                </Button>
         </children>
      </HBox>
   </top>
</BorderPane>
